<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egima.clouduser" >

    <uses-sdk android:minSdkVersion="11" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.egima.clouduser.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.egima.clouduser.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.egima.clouduser.SignupActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.egima.clouduser.ResetActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.egima.clouduser.DashboardActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.egima.clouduser.ChangePasswordActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>